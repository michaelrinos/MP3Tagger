                                            <Border Padding="{TemplateBinding Padding}" UseLayoutRounding="True" d:DesignUseLayoutRounding="True">
                                                <Grid Background="Transparent" SnapsToDevicePixels="False" UseLayoutRounding="True" d:DesignUseLayoutRounding="True">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="19"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="*"/>
                                                    </Grid.RowDefinitions>
                                                    <Grid Grid.Row="1"  UseLayoutRounding="True" d:DesignUseLayoutRounding="True">
