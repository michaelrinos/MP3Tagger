                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter Property="Data" TargetName="arrow" Value="M1,4.5L4.5,1 8,4.5"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Stroke" TargetName="circle" Value="#FF3C7FB1"/>
                                                    <Setter Property="Fill" TargetName="circle" Value="Transparent"/>
                                                    <Setter Property="Stroke" TargetName="arrow" Value="#FF222222"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Stroke" TargetName="circle" Value="#FF526C7B"/>
                                                    <Setter Property="StrokeThickness" TargetName="circle" Value="1.5"/>
                                                    <Setter Property="Fill" TargetName="circle" Value="Transparent"/>
                                                    <Setter Property="Stroke" TargetName="arrow" Value="#FF003366"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Stroke" TargetName="circle" Value="DarkGray"/>
                                                    <Setter Property="Fill" TargetName="circle" Value="Transparent"/>
                                                    <Setter Property="Stroke" TargetName="arrow" Value="#FF666666"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>


    </Window.Resources>
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New" />
                <MenuItem Header="_Open" />
                <MenuItem Header="_Save" />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>

        </Menu>

        <Expander Background="LightGray" DockPanel.Dock="Right" ExpandDirection="Right" MaxWidth="300" Grid.RowSpan="3" Grid.Row="0" Grid.Column="2" IsExpanded="{Binding IsExpanded}" Style="{DynamicResource MyExpanderStyle}" Template="{DynamicResource Centered}">
            <Expander.Header>
                <TextBlock FontSize="14" Text="Similar Fields" >
                    <TextBlock.LayoutTransform>
                        <RotateTransform Angle="90"/>
                    </TextBlock.LayoutTransform>
                </TextBlock>
            </Expander.Header>

            <ListBox ItemsSource="{Binding Manager.Options}" DockPanel.Dock="Right">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding IsChecked}" VerticalAlignment="Center"/>
                            <ContentPresenter Content="{Binding Value}"/>

                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>

            </ListBox>
        </Expander>
        <Expander Background="LightGray" DockPanel.Dock="Left" ExpandDirection="Right" MaxWidth="300" Grid.RowSpan="3" Grid.Row="0" Grid.Column="2" IsExpanded="{Binding IsExpanded}" Style="{DynamicResource MyExpanderStyle}" Template="{DynamicResource Centered}">
            <Expander.Header>
                <TextBlock FontSize="14" Text="Locations" >
                    <TextBlock.LayoutTransform>
                        <RotateTransform Angle="90"/>
                    </TextBlock.LayoutTransform>
                </TextBlock>
            </Expander.Header>

            <Grid DockPanel.Dock="Left" MaxWidth="200">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=Explicit}"
                 Background="GhostWhite"
                 PreviewKeyUp="TextBox_PreviewKeyUp"
                 GotFocus="TextBox_GotFocus" 
                 LostFocus="TextBox_LostFocus" 
                 MinWidth="100"
                 VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                <TreeView Grid.Row="1" 
                  ItemContainerStyle="{StaticResource TreeViewItemStyle}"
                  ItemsSource="{Binding Items}"
                  SelectedItemChanged='TreeView_SelectedItemChanged'
                  PreviewKeyDown="TreeView_PreviewKeyDown"
                  >
                    <TreeView.Resources>
                        <HierarchicalDataTemplate DataType="{x:Type viewmodels:FileSystemItemViewModel}" ItemsSource="{Binding Items}">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding Image, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock Text="{Binding Name}"/>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                        <DataTemplate DataType="{x:Type viewmodels:FakeFileSystemItemViewModel}">
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>

                        <!--
                <Style TargetType="{x:Type TreeViewItem}" >
                    <Setter Property="HeaderTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="20" Height="20" Stretch="Fill" Source="{Binding Image, Mode=OneWay}"/>
                                    <TextBlock Text="{Binding Name}"/>
                                </StackPanel>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="IsExpanded" Value="{Binding IsExpanded}"/>
                    <Setter Property="IsSelected" Value="{Binding IsSelected}"/>
                    <Setter Property="ItemsSource" Value="{Binding Items}"/>
                </Style>
                -->
                    </TreeView.Resources>
                </TreeView>
            </Grid>

        </Expander>


        <ListView Background="White"
                  ItemsSource="{Binding SearchResults}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ContentControl Content="{Binding Manager}"/>

    </DockPanel>

</Window>
