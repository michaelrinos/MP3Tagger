<UserControl x:Class="MP3Tagger.Views.MusicEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MP3Tagger.Views"
             xmlns:taglib="clr-namespace:TagLib;assembly=taglib-sharp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
    <!--
        <Style TargetType="{x:Type DataGridRow}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding , Converter={StaticResource NullHiddenConverter}}" Value="True">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    -->
    </UserControl.Resources>
    <DataGrid ItemsSource="{Binding MusicFiles }">
        <DataGrid.Columns>
            <DataGridTemplateColumn Header="Tag Information">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate DataType="{x:Type taglib:Tag}">
                        <TextBlock Text="{Binding Album}"/>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
                
            </DataGridTemplateColumn>
        </DataGrid.Columns>
        <DataGrid.ItemTemplate>
            <DataTemplate >
                <TextBlock Text="{Binding Tag.Title}"/>
            </DataTemplate>
        </DataGrid.ItemTemplate>

    </DataGrid>
</UserControl>
